{# templates/covoiturages/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Tous les trajets | EcoRide{% endblock %}

{% block body %}
<div class="container mt-5">
  <h1 class="mb-4">Résultats de la recherche</h1>

  {# Cas 1 : pas de recherche encore #}
  {% if not searchPerformed %}
    <div class="alert alert-info">
      Veuillez saisir au moins un critère de recherche.
    </div>

  {# Cas 2 : recherche effectuée mais aucun résultat #}
  {% elseif covoiturages is empty %}
    <div class="alert alert-warning">
      Aucun covoiturage ne correspond à vos critères.
    </div>

  {# Cas 3 : recherche effectuée et résultats #}
  {% else %}
    <div class="row g-4">
      {% for trajet in covoiturages %}
        <div class="col-md-4">
          <div class="card h-100">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title">{{ trajet.villeDepart }} → {{ trajet.villeArrivee }}</h5>
              <p class="card-text mb-1"><strong>Date :</strong> {{ trajet.date|date('d/m/Y') }}</p>
              <p class="card-text mb-1"><strong>Heure de départ :</strong> {{ trajet.heureDepart|date('H:i') }}</p>
              <p class="card-text mb-1"><strong>Heure d'arrivée prévue :</strong> {{ trajet.heureArrivee|date('H:i') }}</p>
              <p class="card-text mb-1"><strong>Prix par personne :</strong> {{ trajet.prix }} crédits</p>
              <a href="{{ path('trajet_show', { id: trajet.id }) }}" class="btn btn-outline-primary mt-auto">Voir le détail</a>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  {% endif %}
</div>
{% endblock %}
