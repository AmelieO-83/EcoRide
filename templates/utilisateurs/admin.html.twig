{% extends 'base.html.twig' %}
{% block title %}Espace Admin | EcoRide{% endblock %}

{% block body %}
  <div class="container mt-5">
    <div class="text-center mb-5 pt-2">
      <h2 class="mb-2">Le {{ "now"|date("d/m/Y") }}, nous avons gagné :</h2>
      <h1 class="text-success mb-4">{{ credits_total }} crédits</h1>
    </div>

    <div class="row g-5 mb-5">
      <div class="col-12 col-lg-6">
        <div class="card"><div class="card-body">
          <h4 class="card-title mb-3">Covoiturages créés par jour</h4>
          <canvas id="chartRides" style="width:100%; height:360px;"></canvas>
        </div></div>
      </div>
      <div class="col-12 col-lg-6">
        <div class="card"><div class="card-body">
          <h4 class="card-title mb-3">Crédits gagnés par jour</h4>
          <canvas id="chartCredits" style="width:100%; height:360px;"></canvas>
        </div></div>
      </div>
    </div>

    <div class="text-center">
      <a href="{{ path('admin_utilisateurs') }}" class="btn btn-primary">
        Gérer les comptes utilisateurs
      </a>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    const ridesPerDay   = {{ rides_per_day|json_encode|raw }};
    const creditsPerDay = {{ credits_per_day|json_encode|raw }};
    const labels = Array.from(new Set([...Object.keys(ridesPerDay), ...Object.keys(creditsPerDay)])).sort();
    const ridesData   = labels.map(d => ridesPerDay[d]   ?? 0);
    const creditsData = labels.map(d => creditsPerDay[d] ?? 0);

    new Chart(document.getElementById('chartRides'), {
      type: 'line',
      data: { labels, datasets: [{ label: 'Rides / jour', data: ridesData, tension: .25 }] },
      options: {
        plugins: { legend: { display: false } },
      }
    });

    new Chart(document.getElementById('chartCredits'), {
      type: 'bar',
      data: { labels, datasets: [{ label: 'Crédits / jour', data: creditsData }] },
      options: {
        plugins: { legend: { display: false } },
      }
    });
  </script>
{% endblock %}
